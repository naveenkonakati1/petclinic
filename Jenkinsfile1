pipeline {
   agent any
     stages{
           	stage('Checkout') {
			steps {
				git url: 'https://github.com/naveenkonukati/petclinic.git'
			}
		}
		stage('build') {
			steps {
			   	 sh 'mvn clean package'
   			}
	   	}
		stage('archive') {
			steps {
		    		archiveArtifacts artifacts: 'target/*.war'
		    	}
		}
		stage('unit tests') {
			steps {
		    		junit 'target/surefire-reports/*.xml'
		  	}
		}
	
            }
}
